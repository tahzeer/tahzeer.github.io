---
const { organization, designation, timeline, desc } = Astro.props;
const isCurrent = timeline.toLowerCase().includes("present");
---

<div class="mb-6">
  <div class="flex justify-between items-start mb-1">
    <h3 class="font-medium flex items-center gap-2">
      {organization}
      {isCurrent && (
        <div class="pt-1 pr-1 pb-1 rounded-full">
          <svg
            stroke="currentColor"
            fill="currentColor"
            stroke-width="0"
            viewBox="0 0 512 512"
            class="text-green-500 animate-pulse rounded-full drop-shadow-[0_0_6px_rgba(34,197,94,0.8)] w-[10px] h-[10px] mt-[2px]"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path d="M256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512z"></path>
          </svg>
        </div>
      )}
    </h3>
    <span class="text-sm text-gray-500">{timeline}</span>
  </div>
  <p class="text-sm text-gray-500 italic mb-2">{designation}</p>
  <p class="text-gray-500 text-sm">{desc}</p>
</div>
